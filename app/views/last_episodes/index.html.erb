

  <!-- Page Content -->
  <div class="container mt-5">
   
         


    <!-- Marketing Icons Section -->
    <div class="row cardBody py-5 mt-5">
      <% @last_episodes.each do |lastEpisode| %>
      <div class="col-lg-3 col-md-6 py-2">
        <div class="card-body bg-dark">
          <h4 class=" text-primary card-title mb-1"><%= link_to lastEpisode.name, last_episode_path(lastEpisode) %></h4>
          
            <p class="card-text mb-1"><%= link_to lastEpisode.episode_number, last_episode_path(lastEpisode) %></p>
          </div>
          <div class="card-footer">
            <p class="btn btn-primary bg-dark"><%= link_to 'Edit', edit_last_episode_path(lastEpisode) %></p>
            <p class="btn btn-primary bg-dark"><%= link_to 'Add Comment', new_last_episode_comment_path(lastEpisode)  %></p>
          </div>
        
      </div>
      <% end %>